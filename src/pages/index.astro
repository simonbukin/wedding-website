---
import Carousel from "../components/Carousel";
import Layout from "../layouts/Layout.astro";
import NavBar from "../components/NavBar.astro";
---

<Layout title="Simon & Kayla">
  <main
    class="mx-auto flex min-h-screen w-full flex-col text-slate-700 sm:max-w-screen-sm md:max-w-screen-md"
  >
    <section
      class="flex flex-col items-center justify-center sm:my-6 sm:flex-grow"
    >
      <div class="mb-4 flex w-full flex-row items-center justify-around">
        <h1
          transition:animate="slide"
          class="relative flex flex-row items-center gap-3 my-2 text-center text-4xl font-bold sm:mb-4 sm:text-6xl"
        >
          SIMON
          <img
            class="h-8 w-8 md:h-10 md:w-10 relative md:-top-2 -top-1"
            src="/heart.svg"
            alt="Heart"
          />
          KAYLA
        </h1>
      </div>
      <h2 class="flex flex-row gap-4 text-2xl sm:text-2xl">
        August 3rd, 2024 â€¢ Camarillo, CA
      </h2>
      <h2 class="mb-4 text-2xl sm:text-2xl">
        <span id="daysUntilWedding"></span> day<span id="dayPlural"></span> to go!
      </h2>
      <script>
        document.addEventListener("DOMContentLoaded", () => {
          const weddingDate = new Date(2024, 7, 3).getTime();
          const currentDate = new Date().getTime();
          const timeDifference = weddingDate - currentDate;
          const daysUntilWedding = Math.ceil(
            timeDifference / (1000 * 60 * 60 * 24)
          );

          const daysUntilWeddingElement =
            document.getElementById("daysUntilWedding");
          if (daysUntilWeddingElement) {
            daysUntilWeddingElement.textContent = daysUntilWedding.toString();
          }

          const dayPluralElement = document.getElementById("dayPlural");
          if (dayPluralElement) {
            dayPluralElement.textContent = daysUntilWedding === 1 ? "" : "s";
          }
        });
      </script>
    </section>

    <section class="flex flex-col items-center justify-center">
      <nav
        class="order-last flex h-full w-full flex-row justify-center sm:order-first sm:mb-2 sm:mt-6"
      >
        <NavBar />
      </nav>
      <div class="h-[283px] sm:h-[513px] w-full">
        <Carousel client:only="solidjs" />
      </div>
    </section>

    <footer
      class="mb-4 mt-8 flex flex-col items-center justify-around text-slate-500 sm:my-8 sm:flex-row"
    >
      <section class="flex flex-row">
        <p>
          Made with ðŸ’œ
          <a
            class="text-simonsCoolColor"
            href="https://www.simonbukin.com"
            target="_blank"
          >
            Simon Bukin
          </a>
        </p>
      </section>

      <section class="mt-2 sm:m-0">
        <p>
          Photos by{" "}
          <a
            class="text-simonsCoolColor"
            href="https://www.instagram.com/3256austin/"
            target="_blank"
          >
            Austin Fisher
          </a>
        </p>
      </section>
    </footer>
  </main>
</Layout>
